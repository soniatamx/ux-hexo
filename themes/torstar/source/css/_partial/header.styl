#header
  color #fff
  background color-link
  padding 80px 0
  width 100%
  margin-bottom 50px
  font-family Lato
  a
    color #fff
    text-decoration none
    &:hover
      text-decoration underline
    
  h1
    font-weight 300
    font-size 3em
    line-height 1

  h2
    font-weight 400
    font-size 1.4em
    line-height 1
    margin-top 10px
  
.center
  margin 0 auto
  @media (min-width 768px)
    width 750px
  @media (min-width 992px)
    width 970px
  @media (min-width 1200px)
    width 1200px

