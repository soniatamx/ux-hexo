*
  margin 0
  padding 0


body
  width 100%
  height 100%
  margin 0px
  padding 0px
  overflow-x hidden
  background color-background
  webkit-font-smoothing antialiased
  color color-font
  font-family font-default
  font-size 15px
  text-shadow 0 0 1px transparent
  transition transform .25s ease-in-out
  -webkit-transition -webkit-transform .25s ease-in-out
  @media screen and (max-width: 1260px)
    margin 0 30px
  @media screen and (max-width: 600px)
    font-size 13px


h1, h2, h3, h4, h5, h6
  font-family font-title
  font-weight 300

h1
  font-size 36px
  color color-link
  margin 10px 0 20px 0

h2
  font-size 24px
  margin-top 25px
  color color-link


h3
  font-size 1.4em
  color #7D7D8E
  font-weight 300


a
  color color-link
  text-decoration none
  &:hover
    color #00719D

.alignleft
  float left

.alignright
  float right

.clearfix
  clearfix()

.inner
  width page-width
  margin 0 auto
  @media screen and (max-width: 1260px)
    width 100%

#sticky-wrapper
float left

#main-col
  position absolute
  width 777px
  margin-left 12.33333%
  @media screen and (max-width: 1260px)
    width 100%
      margin-left 25.33333%
  @media screen and (max-width: 900px)
    margin-right 0
    float none

#wrapper
  @media screen and (max-width: 1260px)
    margin-right 300px
  @media screen and (max-width: 900px)
    margin-right 0